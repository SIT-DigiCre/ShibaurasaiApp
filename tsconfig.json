{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "jsx": "react",
    "lib": [
      "es2015",
      "dom",
      "es5",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules",
    "typings/index.d.ts",
    "typings/globals"
  ]
}